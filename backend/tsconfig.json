{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@middleware/*": ["middleware/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "**/*.ts"  // This should include all .ts files in the backend directory
  ],
  "exclude": [
    "node_modules"
  ]
}
